<div class="create-post-container">
  <form class="create-post-form">
    <input type="hidden" value="{{category_id}}">
      <h2 class"post-card-heading">Create a new post</h2>
      <div class="form-group">
        <label>Title</label>
        <input type="text" class="form-control" id="title">
      </div>

      <div class="form-group">
        <div class="input-group-prepend">
          <label>Content</label>
          <textarea class="form-input" type="text" id="body" aria-label="With textarea"></textarea>
        </div>
      </div>

      <div class="form-group">
        <button class="btn btn-dark" type="submit"id="submit">Submit</button>
      </div>
</form>
</div>

  <script src="./js/create.js"></script>