<a href="/dashboard/create"><button class="btn btn-dark">Add New Post</button></a>

<a href="/dashboard/edit"><button class="btn btn-dark">Edit a Post</button></a>

<div class="userPost-card">
    <h2 class="" value="{{title}}">Here are your current posts</h2>
    <form class="">
      <input class="form-control" type="hidden" id="post-id" value='{{post_id}}'/>

      <div class="form-group">
        <label for="edit-post">Title:</label>
        <input class="form-control" type="text" id="outdoors" value='{{title}}'/>
      </div>

      <div class="form-group">
        <label for="edit-post">Content:</label>
        <textarea class="" type="text" id="body" value= '{{content}}'></textarea>
      </div>
     
      <div class="form-group">
        <button class="btn btn-dark" type="submit">Update Your Post</button>
        <button class="btn btn-dark" type="button">Delete Your Post</button>
      </div>
    </form>
  </div>

  <a href="/categories">Take me to the Threads!</a>

  <ul id="populate"></ul>

  <script src="/js/dashboard.js"></script>